{{>header}}
{{>navbar}}
<h3 class="text-center my-3 text-primary">Edit Task</h3>
<form method="post" action="/editLogic/{{editTask._id}}" > 
    <div class="mb-3">
    <label class="form-label">Name</label>
    <input class="form-control" name="title" value="{{editTask.title}}">
  </div>
  <div class="mb-3">
    <label class="form-label">Content</label>
    <input class="form-control" name="content" value="{{editTask.content}}">
  </div>
  <div class="mb-3 form-check">

    <input type="checkbox" class="form-check-input" id="exampleCheck1" name="status" >
    <label class="form-check-label" for="exampleCheck1">Status</label>
  </div>
  <button type="submit" class="btn btn-primary">Edit</button>
</form>
{{>footer}}